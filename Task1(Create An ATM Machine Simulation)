class ATM:
    def _init_(self, balance=0, pin="1234"):
        self.balance = balance
        self.pin = pin
        self.transactions = []
    
    def check_pin(self):
        attempts = 3
        while attempts > 0:
            input_pin = input("Enter your PIN: ")
            if input_pin == self.pin:
                return True
            else:
                attempts -= 1
                print(f"Incorrect PIN. You have {attempts} attempts left.")
        print("Your account is locked due to too many incorrect attempts.")
        return False

    def account_balance(self):
        print(f"Your current balance is: ${self.balance:.2f}")
        self.transactions.append("Checked balance")

    def cash_withdrawal(self):
        amount = float(input("Enter amount to withdraw: $"))
        if amount > self.balance:
            print("Insufficient funds.")
        else:
            self.balance -= amount
            print(f"${amount:.2f} has been withdrawn. Your new balance is ${self.balance:.2f}")
            self.transactions.append(f"Withdrew ${amount:.2f}")

    def cash_deposit(self):
        amount = float(input("Enter amount to deposit: $"))
        self.balance += amount
        print(f"${amount:.2f} has been deposited. Your new balance is ${self.balance:.2f}")
        self.transactions.append(f"Deposited ${amount:.2f}")

    def change_pin(self):
        old_pin = input("Enter your old PIN: ")
        if old_pin == self.pin:
            new_pin = input("Enter your new PIN: ")
            self.pin = new_pin
            print("PIN successfully changed.")
            self.transactions.append("Changed PIN")
        else:
            print("Incorrect old PIN.")

    def transaction_history(self):
        print("Transaction History:")
        for transaction in self.transactions:
            print(transaction)
        if not self.transactions:
            print("No transactions yet.")

def main():
    atm = ATM(1000)  # Initialize ATM with a default balance of $1000
    
    if not atm.check_pin():
        return
    
    while True:
        print("\nATM Menu:")
        print("1. Account Balance Inquiry")
        print("2. Cash Withdrawal")
        print("3. Cash Deposit")
        print("4. Change PIN")
        print("5. Transaction History")
        print("6. Exit")
        
        choice = input("Choose an option (1-6): ")
        
        if choice == "1":
            atm.account_balance()
        elif choice == "2":
            atm.cash_withdrawal()
        elif choice == "3":
            atm.cash_deposit()
        elif choice == "4":
            atm.change_pin()
        elif choice == "5":
            atm.transaction_history()
        elif choice == "6":
            print("Thank you for using the ATM. Goodbye!")
            break
        else:
            print("Invalid option. Please choose a valid option from the menu.")

if _name_ == "_main_":
    main()
